            array set pool_def [lindex [tmsh::list apm aaa active-directory $aaa_pool] 4]
            if { ![info exists pool_def(use-pool)] || $pool_def(use-pool) ne "disabled" } {
                # parse the fqdn values from the chosen APM AAA object
