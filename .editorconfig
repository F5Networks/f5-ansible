# -*- mode: conf-unix; -*-

# defaults
[*]
insert_final_newline = true

# 4 space indentation
[*.{ini,py,py.tpl,rst,yaml}]
indent_style = space
indent_size = 4

# for travis
[.travis.yml]
indent_style = space
indent_size = 2

# Override for Makefile
[{Makefile, makefile, GNUmakefile}]
indent_style = tab
indent_size = 4

